<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.fis.ta.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Trading Application" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <Label text="Item name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Item price:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Item category:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>
